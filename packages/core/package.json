{
  "name": "@another-hour/core",
  "version": "1.0.0",
  "description": "Core time calculation logic for Another Hour",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser",
    "build:watch": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "another-hour",
    "time",
    "calculation"
  ],
  "author": "Another Hour Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/suncalc": "^1.9.2",
    "suncalc": "^1.9.0"
  }
}