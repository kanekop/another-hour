{
    "name": "@another-hour/watch-app",
    "version": "0.1.0",
    "description": "Mobile-first watch application for Another Hour",
    "main": "public/index.html",
    "scripts": {
        "start": "serve public",
        "dev": "npm run watch",
        "build": "esbuild src/app.ts --bundle --outfile=public/js/main.js --minify",
        "watch": "esbuild src/app.ts --bundle --outfile=public/js/main.js --watch",
        "test": "jest"
    },
    "dependencies": {
        "@another-hour/core": "1.0.0"
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "esbuild": "^0.21.5",
        "@types/node": "^20.3.1",
        "typescript": "^5.1.3",
        "serve": "^14.2.0"
    }
}