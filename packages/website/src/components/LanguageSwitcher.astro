import { getLangFromUrl, getSlug } from 'astro-i18n';

const lang = getLangFromUrl(Astro.url);
const slug = await getSlug(Astro.url);

<div class="flex items-center">
    <a href={`/${slug}`} class:list={[{'font-bold text-ah-blue': lang === 'ja'}, "mx-2"]}>JP</a>
    <span>|</span>
    <a href={`/en/${slug}`} class:list={[{'font-bold text-ah-blue': lang === 'en'}, "mx-2"]}>EN</a>
</div> 