{
    "name": "@another-hour/clock-web",
    "version": "0.1.0",
    "description": "Experimental clock interface for Another Hour",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "npm run build && node dist/server.js",
        "build": "npm run build:client && npm run build:server",
        "build:client": "esbuild src/app.ts --bundle --outfile=public/js/main.js --minify --resolve-extensions=.ts",
        "build:server": "esbuild src/server.ts --platform=node --bundle --packages=external --outfile=dist/server.js --resolve-extensions=.ts",
        "test": "jest"
    },
    "dependencies": {
        "@another-hour/core": "1.0.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.5.0",
        "esbuild": "^0.21.5"
    }
}