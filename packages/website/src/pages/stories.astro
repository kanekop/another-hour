import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const stories = await getCollection('stories');

<Layout title="ストーリー - Another Hour">
    <Header />
    <main class="py-12 px-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-center mb-12">ユーザーストーリー</h1>
            <div class="grid gap-8">
                {stories.map(story => (
                    <a href={`/stories/${story.slug}`} class="block bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
                        <h2 class="text-2xl font-bold text-ah-blue mb-2">{story.data.title}</h2>
                        <p class="text-gray-600 mb-4">{story.data.description}</p>
                        <div class="text-sm text-gray-500">
                            <span>{story.data.author}</span> | 
                            <time datetime={story.data.date.toISOString()}>
                                {new Date(story.data.date).toLocaleDateString('ja-JP')}
                            </time>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </main>
    <Footer />
</Layout> 